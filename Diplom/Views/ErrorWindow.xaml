<Window x:Class="Diplom.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Views"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" Margin="10 ,10, 10, 0" HorizontalAlignment="Center">
            <TextBlock x:Name="Block" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Grid.Row="1" Click="ButtonBase_OnClick"  Content="Вернуться и исправить" VerticalAlignment="Bottom" Margin="20" HorizontalAlignment="Right" Foreground="#FF2196F3" Background="White"/>
    </Grid>
</Window>
