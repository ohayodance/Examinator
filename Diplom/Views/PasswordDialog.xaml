<Window x:Class="Diplom.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Вход" Height="193" Width="300" Left="100" Top="100">
    <materialDesign:Card Margin="10" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="27*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row ="0" Text="Введите пароль:" TextAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,65" Grid.RowSpan="2"/>
            <PasswordBox Grid.Row ="1" x:Name="ResponseTextBox" Margin="0,20,0,20" Grid.ColumnSpan="2" />
            <Button  Grid.Row ="2" Content="Войти" Click="OKButton_Click" Grid.ColumnSpan="2" Foreground="#FF2196F3" Background="White" />
        </Grid>
    </materialDesign:Card>
</Window>
